<main>
    <div class="container-fluid">
        <h1 class="mt-4">All Users</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Users</li>
        </ol>
        <div class="card mb-4">
            <div class="card-body">
              List of active users
            </div>
        </div>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-user mr-1"></i>
                Users
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Admin</th>
                                <th>Name</th>
                                <th colspan="3"></th>
                            </tr>
                        </thead>
                        <tbody>
                          <% @users.each do |user| %>
                            <tr>
                              <td><%= user.admin %></td>
                              <td><%= user.name %></td>
                              <td><%= link_to 'Show', user, class:"btn btn-outline-primary" %></td>
                              <td><%= link_to 'Edit', edit_user_path(user), class:"btn btn-outline-primary" %></td>
                              <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-primary" %></td>
                            </tr>
                          <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <p><%= link_to 'New User', new_user_path, class:"btn btn-outline-dark" %></p>
    </div>
</main>