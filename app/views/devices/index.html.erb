<p id="notice"><%= notice %></p>

<h1>Devices</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Localization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
    <% if can? :read, device %>
      <tr>
        <td><%= device.description %></td>
        <td><%= device.localization %></td>
        <td><%= link_to 'Show', device %></td>
        <% if can? :destroy, device %>
          <td><%= link_to 'Edit', edit_device_path(device) %></td>
          <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>  
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Device', new_device_path %>
