<main>
    <div class="container-fluid">
        <h1 class="mt-4">Your Units</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Units</li>
        </ol>
        <div class="card mb-4">
            <div class="card-body">
              The units shown below are the ones that you have authorization to see, any problem please contact the administration.
            </div>
        </div>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-building mr-1"></i>
                Units
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th>Localization</th>
                                <th colspan="3"></th>
                            </tr>
                        </thead>
                        <tbody>
                          <% current_user.units.each do |unit| %>
                            <tr>
                              <td><%= unit.description %></td>
                              <td><%= unit.localization %></td>
                              <td><%= link_to 'Show', unit, class:"btn btn-outline-primary" %></td>
                              <td><%= link_to 'Edit', edit_unit_path(unit), class:"btn btn-outline-primary" %></td>
                              <% if can? :create, Unit %>
                              <td><%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-primary" %></td>
                              <% end %>
                            </tr>
                          <% end %>
                      </tbody>
                    </table>
                </div>
            </div>
        </div>
        <% if can? :create, Unit %>
          <p><%= link_to 'New Unit', new_unit_path, class:"btn btn-outline-dark" %></p>
        <% end %>
    </div>
</main>